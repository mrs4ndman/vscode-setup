[
  // Turbo-logging
  {
    "key": "ctrl+alt+l",
    "command": "turboConsoleLog.displayLogMessage",
    "when": "editorTextFocus"
  },
  // Movement events for windows
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.focusBelowGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusAboveGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  // Resizing
  {
    "key": "alt+shift+e",
    "command": "workbench.action.evenEditorWidths",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "alt+shift+h",
    "command": "workbench.action.decreaseViewWidth",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "alt+shift+j",
    "command": "workbench.action.increaseViewHeight",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "alt+shift+k",
    "command": "workbench.action.decreaseViewHeight",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "alt+shift+l",
    "command": "workbench.action.increaseViewWidth",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  // Terminal toggle + session management
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.togglePanel",
    "when": "editorTextFocus && vim.active && vim.mode != 'Visual'"
  },
  {
    "key": "alt+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "alt+e",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminalFocus"
  },
  // Explorer keybinds, muchas a la Vim Ex
  {
    "key": "shift+5", // Por-ciento, al estilo Ex
    "command": "explorer.newFile",
    "when": "explorerViewletFocus"
  },
  {
    "key": "d", // Crear carpetas
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus && !inputFocus"
  },
  {
    "key": "q", // Salir del explorador 1
    "command": "workbench.action.closeSidebar",
    "when": "explorerViewletFocus && !inputFocus"
  },
  {
    "key": "ctrl+c", // Salir del explorador 2
    "command": "workbench.action.closeSidebar",
    "when": "explorerViewletFocus && !inputFocus"
  },
  {
    "key": "shift+d", // Borrar archivos
    "command": "deleteFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+r", // Renombrar archivos
    "command": "renameFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "alt+shift+s", // Sidebar global toggle
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "alt+shift+e",
    "command": "workbench.files.action.focusFilesExplorer"
  },
  // VS Code instance management
  {
    "key": "ctrl+shift+n", // Crear nueva instancia
    "command": "workbench.action.newWindow",
    "when": "!explorerViewletFocus && !terminalFocus"
  }
]